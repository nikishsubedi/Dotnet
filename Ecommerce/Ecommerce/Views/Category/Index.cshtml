@model List<CategoryModel>
    <h2>Welcome to category page</h2>
    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Available</th>
                <th>Description</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach(CategoryModel item in Model)
            {
            <tr>
                
                <td>@item.Id</td>
                <td>@item.Name</td>
                <td>@item.IsActive</td>
                <td>@item.Description</td>
                <td>
                    <a href="/Category/Edit?id=@item.Id" class = "btn btn-success">Edit</a>
                    <a href="/Category/Delete?id=@item.Id" class = "btn btn-danger">Delete</a>
                </td>
            </tr>
        }
        </tbody>
    </table>